<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Top -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            style="@style/main_style"
            android:text="@string/main_btn_address_device" />

        <TextView
            android:id="@+id/main_tv_time"
            style="@style/main_style"
            android:text="@string/main_tv_time" />

        <Button
            style="@style/main_style"
            android:text="@string/main_btn_add_socket" />
    </LinearLayout>

    <!-- Content -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-60dp"
        android:layout_weight="1" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <AbsoluteLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="-20dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="200dp"
                    android:layout_y="100dp"
                    android:text="音量-" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="100dp"
                    android:layout_y="100dp"
                    android:text="音量+" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="100dp"
                    android:layout_y="200dp"
                    android:text="频道+" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="100dp"
                    android:layout_y="300dp"
                    android:text="静音" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="460dp"
                    android:layout_y="100dp"
                    android:text="2" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="198dp"
                    android:layout_y="200dp"
                    android:text="频道-" />

                <Button
                    android:id="@+id/button24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="200dp"
                    android:layout_y="300dp"
                    android:text="返回" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="360dp"
                    android:layout_y="100dp"
                    android:text="1" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="360dp"
                    android:layout_y="235dp"
                    android:text="7" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="360dp"
                    android:layout_y="170dp"
                    android:text="4" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="560dp"
                    android:layout_y="101dp"
                    android:text="3" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="460dp"
                    android:layout_y="235dp"
                    android:text="8" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="460dp"
                    android:layout_y="170dp"
                    android:text="5" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="873dp"
                    android:layout_y="235dp"
                    android:text="@string/tv_right" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="790dp"
                    android:layout_y="170dp"
                    android:text="@string/tv_up" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="704dp"
                    android:layout_y="235dp"
                    android:text="@string/tv_left" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="560dp"
                    android:layout_y="170dp"
                    android:text="6" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="460dp"
                    android:layout_y="300dp"
                    android:text="0" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="360dp"
                    android:layout_y="300dp"
                    android:text="菜单" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="790dp"
                    android:layout_y="235dp"
                    android:text="@string/tv_ok" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="560dp"
                    android:layout_y="300dp"
                    android:text="视屏源" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="560dp"
                    android:layout_y="235dp"
                    android:text="9" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="790dp"
                    android:layout_y="300dp"
                    android:text="@string/tv_down" />

                <ToggleButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="792dp"
                    android:layout_y="101dp"
                    android:textOff="@string/common_off"
                    android:textOn="@string/common_on" />
            </AbsoluteLayout>
        </HorizontalScrollView>
    </ScrollView>
    <!-- Bottom -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/main_btn_back"
            style="@style/main_style"
            android:text="@string/main_btn_back" />

        <TextView
            android:id="@+id/main_tv_message"
            style="@style/main_style"
            android:text="@string/main_tv_message" />

        <Button
            android:id="@+id/main_btn_confirm"
            style="@style/main_style"
            android:text="@string/main_btn_add" />
    </LinearLayout>

</LinearLayout>