<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/warningdeviceitem_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_text"
            android:background="@drawable/pressed"
            android:text="位置" />

        <TextView
            android:id="@+id/warningdeviceitem_tv_name"
            android:layout_width="wrap_content"
            style="@style/light_text"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            android:text="报警器" />

        <TextView
            android:id="@+id/warningdeviceitem_tv_delaytime"
            style="@style/light_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            android:text="延时20" />


        <Button
        android:id="@+id/ele_learn"
        style="@style/scene_text_style"
        android:text="学习"
        android:background="@drawable/add_light_drawable"
         />
    </LinearLayout>
	
</HorizontalScrollView>