<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<HorizontalScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lightitem_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_text"
            android:background="@drawable/pressed"
            android:text="位置" />

        <TextView
            android:id="@+id/lightitem_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_text"
            android:background="@drawable/pressed"
            android:text="电灯" />

            <Button
                android:id="@+id/lightitem_radiobtn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/light_radion_button_off"
                />

            <Button
                android:id="@+id/lightitem_radiobtn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 style="@style/light_radion_button_on" />
    </LinearLayout>

</HorizontalScrollView>
<HorizontalScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lightitem_tv_location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            style="@style/light_text"
            android:text="位置" />

        <TextView
            android:id="@+id/lightitem_tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_text"
            android:background="@drawable/pressed"
            android:text="电灯" />


            <Button
                android:id="@+id/lightitem_radiobtn_open2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/light_radion_button_off"/>

            <Button
                android:id="@+id/lightitem_radiobtn_close2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               style="@style/light_radion_button_on" />
    </LinearLayout>

</HorizontalScrollView>
<HorizontalScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lightitem_tv_location3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            style="@style/light_text"
            android:text="位置" />

        <TextView
            android:id="@+id/lightitem_tv_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_text"
            android:background="@drawable/pressed"
            android:text="电灯" />

            <Button
                android:id="@+id/lightitem_radiobtn_open3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               style="@style/light_radion_button_off"  />

            <Button
                android:id="@+id/lightitem_radiobtn_close3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/light_radion_button_on"  />
    </LinearLayout>

</HorizontalScrollView>
</LinearLayout>
<ToggleButton
        android:id="@+id/ele_is_learn"
        style="@style/scene_text_style"
        android:textOff="@string/common_control"
        android:visibility="gone"
        android:textOn="@string/common_learn" />
</FrameLayout>